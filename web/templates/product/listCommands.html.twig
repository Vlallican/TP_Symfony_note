{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="container mt-5">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {% for command in commands %}
            <tr>
                <td><a href="{{ path('product.showCommands', {id : command.id}) }}">{{command.id}}</a></td>
                <td>{{command.email}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
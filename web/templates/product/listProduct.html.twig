{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="container mt-5">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>CreatedAt</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td><a href="{{ path('product.showProduct', {id : product.id}) }}">{{product.name}}</a></td>
                <td>{{product.price}}</td>
                <td>{{product.description|slice(0,299)~"..."}}<a
                        href="{{ path('product.showProduct', {id : product.id}) }}">Voir plus</a></td>
                <td>{{product.createdAt|date("d-m-Y")}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
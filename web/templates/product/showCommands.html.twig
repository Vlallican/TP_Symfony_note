{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="container mt-5">
    <a href="{{ path('product.listCommands') }}">Retour à la liste des commandes</a>

    <p><strong>Identifiant : </strong>{{commands.id}}</p>
    <p><strong>Email : </strong>{{commands.email}} €</p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
            {% for product in  products %}
            <tr>
                <td>{{product.name}}</td>
                <td>{{product.price}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
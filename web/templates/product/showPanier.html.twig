{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="container mt-5">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            {% for product in panier %}
                <tr>
                    <td>{{product.name}}</td>
                    <td>{{product.quantity}}</td>
                    <td>{{product.price}} €</td>
                    <td><a href="/cart/delete/{{product.id}}"><button class="btn btn-danger">Supprimer</button></a></td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Total : {{total}} €</th>
            </tr>
        </tfoot>
        
    </table>

    {{ form_start(productForm) }}
        {{ form_row(productForm.email) }}

        <button type="submit" class="btn btn-primary btn-block">
            Valider la commande
        </button>
    {{ form_end(productForm) }}
</div>
{% endblock %}
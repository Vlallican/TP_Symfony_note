{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="container mt-5">
    <a href="{{ path('product.listProduct') }}">Retour à la liste de produits</a>

    <p><strong>Nom du produit : </strong>{{product.name}}</p>
    <p><strong>Prix : </strong>{{product.price}} €</p>
    <p><strong>Description : </strong>{{product.description}}</p>
    <p><strong>Date de création : </strong>{{product.createdAt|date("d-m-Y")}}</p>

    <button class="btn btn-primary" id="btnAddPanier" onclick="ajoutPanier()">Ajouter au panier</button>

</div>

<script>
    function ajoutPanier() {
        fetch("{{ path('addPanier', {id : product.id}) }}")
            .then(data => {
                $btnPanier = document.querySelector('#btnAddPanier')
                $btnPanier.disabled = true;
            })
    }
</script>

{% endblock %}